{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "valid_line": {
    "template": "<#e0def4,#286983>\uf42e </><#286983,transparent>\ue0b4</> ",
    "foreground": "#ffffff",
    "background": "transparent"
  },
  "error_line": {
    "template": "<#eb6f92,#286983>\ue009 </><#286983,transparent>\ue0b4</> ",
    "foreground": "#ffffff",
    "background": "transparent"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#ffe9aa",
          "type": "root",
          "style": "powerline"
        },
        {
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#ffffff",
          "type": "session",
          "style": "powerline",
          "template": "{{ .UserName }}@{{ .HostName }}"
        },
        {
          "properties": {
            "enable_hyperlink": true,
            "folder_icon": "\uf115",
            "folder_separator_icon": "\\",
            "style": "full"
          },
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#91ddff",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "branch_max_length": 40,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#95ffa4",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "template": "{{ .UpstreamIcon }} {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} \uf044{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} üñ´ {{ .StashCount }}{{ end }}"
        },
        {
          "properties": {
            "prefix": " \ue235 "
          },
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#906cff",
          "type": "python",
          "style": "powerline"
        },
        {
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#ff8080",
          "template": "!",
          "type": "status",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b2",
          "background": "#83769c",
          "type": "executiontime",
          "style": "powerline",
          "template": "\u23f3 {{ .FormattedMs }} ",
          "invert_powerline": true
        },
        {
          "properties": {
            "time_format": "3:04:05 PM"
          },
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b2",
          "background": "#2e9599",
          "type": "time",
          "style": "powerline",
          "invert_powerline": true
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#2eb6f5",
          "template": "\u2601 {{ .Name }}",
          "type": "az",
          "style": "powerline"
        },
        {
          "template": "\u2388 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#ebcc34",
          "type": "kubectl",
          "style": "powerline"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "‚ùØ",
          "foreground": "#007ACC",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
